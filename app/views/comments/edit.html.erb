<div class="container topic_index">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10　col-sm-offset-1">

  <%= form_for([@topic,@comment], remote: true) do |f| %>

  <!-- エラー判定 -->
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= @comment.errors.count %>件のエラーがあります。</h2>

        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <!-- コメント入力フォーム -->
    <%= f.hidden_field :topic_id %>
    <div class="field">
      <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  </div>
</div>
