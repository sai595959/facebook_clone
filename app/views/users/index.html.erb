<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 row-eq-height">
        <%= profile_img(user,:user_index) %>
        <div class="item">
          <%= link_to user.name, user %>
        </div>
        <% if user.id != current_user.id %>


              <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: 'btn btn-default'%>

            <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>

        <% else %>


        <% end %>
      </div>
  <% end %>
</div>
