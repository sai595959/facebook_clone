<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<section class="main-header">
  <p class="flash"><%= notice %><%= alert %></p>
</section>

<%= form_for(@topic, url: choose_new_or_edit, html: choose_new_or_edit_method ) do |f| %>
<% if @topic.errors.any? %>
  <div id="error_explanation">
    <!-- バリデーションエラーの件数を表示します。 -->
    <h2><%= @topic.errors.count %>件のエラーがあります。</h2>

    <ul>
    <!-- @topic.errorsは@topicをバリデーションした際のエラー情報です。
    full_messagesは複数のエラーメッセージを表します。 -->
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


  <%= f.label "投稿内容" %>
  <%= f.text_field :content, class:  'form-control' %>
  <br>
  <%= f.submit "投稿", class: 'btn btn-primary btn-block'%>
<% end %>

</div>
</div>
